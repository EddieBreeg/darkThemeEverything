{
    "manifest_version": 2,
    "name": "Dark Theme Everything",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["firefox/darktheme.js"]
        }
    ],
    "background": {
        "scripts": ["firefox/background.js"]
    },
    "browser_action": {
        "default_icon": "img/sun.png",
        "default_popup": "options.html"
    },
    "permissions": ["tabs", "storage"]
}